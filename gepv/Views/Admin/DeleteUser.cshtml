@{
    ViewBag.Title = "Apagar Usuáro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="element-box">
        <h2 class="element-header">Apagar </h2>

        @using (Html.BeginForm("DeleteUser", "Admin", FormMethod.Post, new { @role = "form" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <div>Tem a certeza que deseja  <i>Apagar o Usuário</i>?</div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Apagar" class="btn btn-danger" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="button" value="Cancelar" onclick="location.href='@Url.Action("EditUser", "Admin")'" class="btn btn-default" style="float:left;" />
                </div>
            </div>
        }
    </div>