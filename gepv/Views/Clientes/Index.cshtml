@model IEnumerable<gepv.Models.Cliente>

@{
    ViewBag.Title = "Index";
}


<div class="element-wrapper">
    <h6 class="element-header">
        Clientes Cadastrados
    </h6>
    <div class="element-box">

        <p>
            <a href="/Clientes/create" class="btn btn-primary">Adicionar Novo Cliente</a>
        </p>


        <div class="table-responsive">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Endereço)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Endereço)
                        </td>
                        <td>
                            @Html.ActionLink("Alterar", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Apagar", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>
