@model gepv.Models.Cliente

@{
    ViewBag.Title = "Apagar Cliente";
}

    <div class="element-wrapper">

        <div class="element-box" style="text-align:center">


            <h3>Tem certeza de que deseja apagar o cliente:@Model.Nome?</h3>
            <div>
                <p>
                    <a href="/Categorias/Index" class="btn btn-primary">Todas as Categorias</a>
                </p>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Nome)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Nome)
                    </dd>

                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Apagar" class="btn btn-danger" />
                    </div>
                }
            </div>
        </div>
    </div>
