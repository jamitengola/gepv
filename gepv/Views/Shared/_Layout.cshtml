</head>
@using Microsoft.AspNet.Identity
<body class="menu-position-side menu-side-left full-screen with-content-panel">
    <div class="all-wrapper with-side-panel solid-bg-all">
        <div class="search-with-suggestions-w">
            
        </div>
        <div class="layout-w">
            <!--------------------
            START - Mobile Menu
            -------------------->
            <!--------------------
            END - Mobile Menu
            -------------------->
            <!--------------------
            START - Main Menu
            -------------------->
             @using gepv.Models;
            <div  class="menu-w color-scheme-light color-style-transparent menu-position-side menu-side-left menu-layout-compact sub-menu-style-over sub-menu-color-bright selected-menu-color-light menu-activated-on-hover menu-has-selected-link">
                <div class="logo-w">
                    <a class="logo" href="/home/index">
                        <div class="logo-element"></div>
                        <div class="logo-label">
                            GEPV
                        </div>
                    </a>
                </div>
                <div class="logged-user-w avatar-inline">
                    <div class="logged-user-i">
                        <div class="avatar-w">
                            @{

                                var imgUrl = Url.Content("~/Content/images/profile/" + User.Identity.GetUserName() + ".png") + "?time=" + DateTime.Now.ToString();
                                var db = new ApplicationDbContext();
                                var nome = db.Users.Find(User.Identity.GetUserId()).FirstName + " " + db.Users.Find(User.Identity.GetUserId()).LastName;
                            }
                            <img alt="" src="@imgUrl">
                        </div>
                            <div class="logged-user-info-w">
                                <div class="logged-user-name">
                                    <a href="/Manage/Index">
                                        @nome
                                    </a>
                                </div>
                               
                            </div>
                       
                    </div>
                </div>
                <h1 class="menu-page-header">
                    Page Header
                </h1>
                <ul class="main-menu">
                    <li class=" has-sub-menu">
                        <div class="sub-menu-w">
                            <div class="sub-menu-header">
                                Menu Styles
                            </div>
                            <div class="sub-menu-icon">
                                <i class="os-icon os-icon-layers"></i>
                            </div>
                            <div class="sub-menu-i">
                                <ul class="sub-menu">
                                    <li>
                                        <a href="#">Side Menu Light</a>
                                    </li>
                                    <li>
                                        <a href="#">Side Menu Dark</a>
                                    </li>
                                    <li>
                                        <a href="#">Side Menu Transparent <strong class="badge badge-danger">New</strong></a>
                                    </li>
                                    <li>
                                        <a href="#">Side &amp; Top Dark</a>
                                    </li>
                                    <li>
                                        <a href="#">Side &amp; Top</a>
                                    </li>
                                    <li>
                                        <a href="#">Mini Side Menu</a>
                                    </li>
                                </ul><ul class="sub-menu">
                                    <li>
                                        <a href="#">Mini Menu Dark</a>
                                    </li>
                                    <li>
                                        <a href="#">Compact Side Menu</a>
                                    </li>
                                    <li>
                                        <a href="#">Compact Menu Dark</a>
                                    </li>
                                    <li>
                                        <a href="#">Right Menu</a>
                                    </li>
                                    <li>
                                        <a href="#">Top Menu Light</a>
                                    </li>
                                    <li>
                                        <a href="#">Top Menu Dark</a>
                                    </li>
                                </ul><ul class="sub-menu">
                                    <li>
                                        <a href="#">Top Menu Image <strong class="badge badge-danger">New</strong></a>
                                    </li>
                                    <li>
                                        <a href="#">Sub Menu Flyout</a>
                                    </li>
                                    <li>
                                        <a href="#">Sub Flyout Dark</a>
                                    </li>
                                    <li>
                                        <a href="#">Sub Flyout Bright</a>
                                    </li>
                                    <li>
                                        <a href="#">Menu Inside Click</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </li>
                    <li class="sub-header">
                        <span>Menu</span>
                    </li>
                    <li class=" has-sub-menu">
                        <a href="#">
                            <div class="icon-w">
                                <div class="os-icon os-icon-package"></div>
                            </div>
                            <span>Stock</span>
                        </a>
                        <div class="sub-menu-w">
                            <div class="sub-menu-header">
                                Stock
                            </div>
                            <div class="sub-menu-icon">
                                <i class="os-icon os-icon-package"></i>
                            </div>
                            <div class="sub-menu-i">
                                <ul class="sub-menu">
                                    <li>
                                        <a href="/Produtos/Index">Produtos</a>
                                    </li>
                                    <li>
                                        <a href="/Fornecedors/Index">Fornecedores</a>
                                    </li>
                                    <li>
                                        <a href="/Categorias/Index">Categorias</a>
                                    </li>
                                    <li>
                                        <a href="/Entradas/Index">Entradas e Saidas</a>
                                    </li>

                                </ul>
                            </div>
                        </div>
                    </li>
                    <li class=" has-sub-menu">
                        <a href="#">
                            <div class="icon-w">
                                <div class="os-icon os-icon-file-text"></div>
                            </div>
                            <span>Clientes</span>
                        </a>
                        <div class="sub-menu-w">
                            <div class="sub-menu-header">
                                Clientes
                            </div>
                            <div class="sub-menu-icon">
                                <i class="os-icon os-icon-file-text"></i>
                            </div>
                            <div class="sub-menu-i">
                                <ul class="sub-menu">
                                    <li>
                                        <a href="/Clientes/Index">Lista de Clientes</a>
                                    </li>
                                    <li>
                                        <a href="/Clientes/Create">Adicionar Clientes</a>
                                    </li>


                                </ul>
                            </div>
                        </div>
                    </li>  
                    @if (User.IsInRole("Admin"))
                    {
                        <li class=" has-sub-menu">
                            <a href="#">
                                <div class="icon-w">
                                    <div class="os-icon os-icon-users"></div>
                                </div>
                                <span>Usuários</span>
                            </a>
                            <div class="sub-menu-w">
                                <div class="sub-menu-header">
                                    Usuários
                                </div>
                                <div class="sub-menu-icon">
                                    <i class="os-icon os-icon-users"></i>
                                </div>

                                <div class="sub-menu-i">
                                    <ul class="sub-menu">

                                        <li>
                                            <a href="/Admin/Index">Todos os Usuários</a>
                                        </li>
                                        <li>
                                            <a href="/Account/Register">Novo Usuário</a>
                                        </li>


                                    </ul>
                                </div>
                            </div>
                        </li>

                    }
                    <li class=" has-sub-menu">
                        <a href="#">
                            <div class="icon-w">
                                <div class="os-icon os-icon-users"></div>
                            </div>
                            <span>Vendas</span>
                        </a>
                        <div class="sub-menu-w">
                            <div class="sub-menu-header">
                                Vendas
                            </div>
                            <div class="sub-menu-icon">
                                <i class="os-icon os-icon-users"></i>
                            </div>
                            <div class="sub-menu-i">
                                <ul class="sub-menu">

                                    <li>
                                        <a href="/Saidas/Create">Venda Rápida</a>
                                    </li>
                                    <li>
                                        <a href="/Saidas/Index">Relatório de Vendas</a>
                                    </li>


                                </ul>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
            <!--------------------
            END - Main Menu
            -------------------->
            <div style="min-height:900px" class="content-w">
                <!--------------------
    START - Top Bar
    -------------------->


                <div class="top-bar color-scheme-transparent">
                    <!--------------------
        START - Top Menu Controls
        -------------------->
                    <div class="top-menu-controls">
                        <div class="element-search autosuggest-search-activator">
                            <input placeholder="Pesquise o que deseja aqui..." type="text">
                        </div>

                        <!--------------------
            START - Settings Link in secondary top menu
            -------------------->
                        <div class="top-icon top-settings os-dropdown-trigger os-dropdown-position-left">
                            <i class="os-icon os-icon-ui-46"></i>
                            <div class="os-dropdown">
                                <div class="icon-w">
                                    <i class="os-icon os-icon-ui-46"></i>
                                </div>
                                <ul>
                                    <li>
                                        <a href="/Manage/Index"><i class="os-icon os-icon-ui-49"></i><span>Definições de Perfil</span></a>
                                    </li>                                   
                                    <li>
                                        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                                        {
                                        @Html.AntiForgeryToken()

                                    <a href="javascript:document.getElementById('logoutForm').submit()"><i class="os-icon os-icon-ui-93"></i>Sair</a>
                                      
                                        }
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <!--------------------
            END - Settings Link in secondary top menu
            -------------------->
                        <!--------------------
            START - User avatar and menu in secondary top menu
            -------------------->
                       
                        <!--------------------
            END - User avatar and menu in secondary top menu
            -------------------->
                    </div>
                    <!--------------------
        END - Top Menu Controls
        -------------------->
                </div>

                <div class="content-panel-toggler">
                    <i class="os-icon os-icon-grid-squares-22"></i><span>Sidebar</span>
                </div>

                <div class="content-i">

                    <div class="content-box">
                        @RenderBody()
                        </div>
                        <div class="content-panel">
                            <div class="content-panel-close">
                                <i class="os-icon os-icon-close"></i>
                            </div>
                            <div class="element-wrapper">
                                <h6 class="element-header">
                                    Links Rápidos
                                </h6>
                                <div class="element-box-tp">
                                    <div class="el-buttons-list full-width">
                                        <a class="btn btn-white btn-sm" href="/Produtos/Create"><i class="os-icon os-icon-delivery-box-2"></i><span>Criar Novo Produto</span></a><a class="btn btn-white btn-sm" href="/Categorias/Create"><i class="os-icon os-icon-window-content"></i><span>Criar Categoria</span></a><a class="btn btn-white btn-sm" href="/Home/About"><i class="os-icon os-icon-wallet-loaded"></i><span>Sobre o Sistema</span></a>
                                    </div>
                                </div>
                            </div>
                            <!--------------------
            START - Recent Activity
            -------------------->
                            
                            <!--------------------
            END - Recent Activity
            -------------------->
                            <!--------------------
            START - Team Members
            -------------------->
                            <!--------------------
            END - Team Members
            -------------------->
                        </div>
                    </div>
                </div>
            </div>
        <div class="display-type"></div>
    </div>
